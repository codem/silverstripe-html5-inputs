{
    "name": "codem/silverstripe-html5-inputs",
    "description": "Base HTML5 input fields, no Javascript",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "html5",
        "input",
        "form"
    ],
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Codem",
            "homepage": "https://github.com/codem/silverstripe-html5-inputs"
        }
    ],
    "autoload": {
        "psr-4": {
            "Codem\\Utilities\\HTML5\\": [
                "src/Forms/",
                "src/Traits/"
            ],
            "Codem\\Utilities\\HTML5\\Tests\\": "tests/"
        }
    },
    "require": {
        "silverstripe/framework" : "^6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "friendsofphp/php-cs-fixer": "^3",
        "ext-dom" : "*",
        "phpstan/phpstan": "^2",
        "rector/rector": "^2",
        "nswdpc/ci-files": "dev-v-4",
        "cambis/silverstan": "^2",
        "cambis/silverstripe-rector": "^2"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true
        }
    }
}
